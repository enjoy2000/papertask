            $.ajax({
                url: '/" . $this->lang_code . "/admin/email/loadTemplate',
                type: 'post',
                dataType: 'json',
                data: 'type=' + type + '&language=' + language,
                success: function(response){
                    if(response.result){
                        $('input[name=subject]').val(response.subject);
                        $('.summernote').code(response.content);
                    }else{
                        $('input[name=subject]').val('');
                        $('.summernote').code('');
                    }
                }
            });
        }
    });

