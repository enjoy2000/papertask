<div class=" setup-content" id="step-2">
<form id="formStep2" action="#" class="wizard-big" novalidate>
	<div class="col-md-12">


		<div class="row">
			<div class="col-md-5">
				<h4>Translate From *</h4>
				<select id="sourceLanguage" required class="form-control required valid" name="sourceLanguage"
					aria-required="true"
					ng-options="language.name for language in sourceLanguages track by language.id"
					ng-model="project.sourceLanguage"
					required
					ng-change="changePServicePrice();removeLangFSML();clearTargetLanguages();">
					<option value="" ng-disabled="disable" ng-hide="true">Select Source Language</option>
				</select>

			</div>
			<div class="col-md-5">
				<h4>Translate To *</h4>
				<select class="form-control required valid" name="targetLanguage"
					aria-required="true"
					ng-options="language.name for language in modifiedTarLangs track by language.id"
					ng-model="project.targetLanguage"
					required
					ng-change="add_targetLanguage();changePServicePrice();">
					<option value="" ng-hide="hidetargetLang" >Add Target Languages</option>
				</select>
			</div>
			<div class="col-md-2">
				<h4>Currency</h4>
				<div data-toggle="buttons" class="form-group">
					<!-- here do a judgement, if page load in chinese, then defaule currency is CNY, otherwise USD -->
					<select class="form-control required valid" name="currency"
						aria-required="true"
						ng-options="currency.name for currency in currencys"
						 ng-model="project.currency"
						required
						ng-change="chooseCurrency(currency);refreshInfo();">
						<option value="" ng-hide="true" >Please Select Currency</option>
				   </select>  
				</div>
			</div>
		</div>
		<br>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>#</th>
					<th>Target Languages</th>
					<th>Quality Level</th>
					<th>Rate</th>
					<th>Translate Graphics</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="item in project.targetLanguages">
					<td>{{$index + 1}}</td>
					<td><span class="label label-primary">{{item.name}}</span></td>
					</td>
					<td>
						<select required class="form-control valid" name="servicelevel"
							aria-required="false"
							ng-options="servicelevel.name for servicelevel in ProjectServiceLevels"
							ng-model="project.serviceLevel"	
							ng-change="chooseProjectServiceLevel();changePServicePrice();">
							<option value="" ng-hide="true">Select Quality level</option>
						</select>
					</td>
					<!-- here load papertask list price -->
					<td>{{CurrentCurrency}} {{item.price | currency : '' : 2}} / word</td>
					<td><select class="form-control required valid " name="transGraph"
							aria-required="true"
							ng-options="transGraph.name for transGraph in transGraphs"
							ng-model="project.transGraph"
							ng-change="choosetransGraph();">	
						</select></td>
					<td class="text-center child-is-link"><i
						ng-click="removeTargetLang(item)"
						class="fa fa-trash-o text-danger"></i>
					</td>
				</tr>
				
			</tbody>
		</table>
		<div class="text-center">
			<button id="" type="button"  class="btn btn-primary btn-lg" onclick="PrevStep2()">Previous</button>
			<button id=""  type="button"  class="btn btn-primary btn-lg" ng-click="checkValidStep2()">Next</button>
		</div>
	</div>
</form>
</div>
