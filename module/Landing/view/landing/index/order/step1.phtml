<div class=" setup-content" id="step-1">

	<div class="col-md-12 well" ng-controller="AppController"
											nv-file-drop="" uploader="uploader">
		<p>
			We accept the following files, under <span class="text-danger">50MB</span>
			size:
		</p>
		<small><strong>Excel</strong> (.xls, .xlsx, .xlsm), <strong>Word</strong>
			(.doc, .docx), <strong>PowerPoint</strong> (.ppt, .pptx), <strong>Acrobat</strong>
			(.pdf), <strong>Open Office</strong> (.odt), <strong>Rich Text Format</strong>
			(.rtf), <strong>Plain text</strong> (.txt)</small> <br>
		<br>
		<div class="col-md-4" id="files">
													<span class="btn btn-primary btn fileinput-button"> <i
														class="fa fa-cloud-upload"></i> <span>Select files</span>
														<input id="fileupload" type="file" name="files[]"
														nv-file-select="" uploader="uploader" multiple>
													</span>
												</div>
		<div class="col-md-8">
			<p></p>
			<div class="progress progress-bar-default" ng-show="uploader.isUploading" >
				<div style="width: {{uploader.progress}}%" aria-valuemax="100" aria-valuemin="0"
					aria-valuenow="{{uploader.progress}}" role="progressbar" class="progress-bar">
					<span class="sr-only">{{uploader.progress}}% Complete (success)</span>
				</div>
			</div>
		</div>
		<br>
		<br>
		<br>
		<div class="project-list">
			<table class="table table-hover">
				<tbody>
					<tr ng-repeat="item in project.files">
						<td class="project-title">{{item.name }}</td>
						<td class="project-completion text-right">{{item.count }} words</td>
						<td class="project-actions text-right"><a href="#"
							class="btn btn-danger btn-xs" ng-click="removeItem(item)"><i class="fa fa-trash-o"></i>
								Delete </a></td>
					</tr>
				</tbody>
			</table>
		</div>
		<hr>
		<div class="text-center">
			<button id="" type="button" class="btn btn-primary btn-lg"
				ng-click="initStep2()">Next</button>
			<!-- next button show after at least one file is uploaded -->
		</div>
	</div>
</div>



